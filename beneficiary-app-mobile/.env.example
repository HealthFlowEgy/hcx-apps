# ============================================================================
# .env.development - Development Environment
# ============================================================================

# BSP Backend API
BSP_API_URL=https://dev-bsp.healthflow.eg/api/v1
BSP_API_KEY=dev_key_12345_your_development_key

# HCX Gateway (for reference, BSP handles this)
HCX_GATEWAY_URL=https://dev-hcx.healthflow.eg
HCX_PARTICIPANT_CODE=BSP001

# Valify KYC Service
VALIFY_API_URL=https://api.valify.me/v1
VALIFY_API_KEY=your_valify_api_key_here
VALIFY_APP_ID=your_valify_app_id_here

# Firebase (for notifications)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-app.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef

# App Configuration
APP_ENV=development
API_TIMEOUT=30000
ENABLE_LOGGING=true
ENABLE_MOCK_DATA=false

# Feature Flags
FEATURE_REIMBURSEMENT_CLAIMS=true
FEATURE_BIOMETRIC_AUTH=true
FEATURE_OFFLINE_MODE=false
FEATURE_ANALYTICS=false

