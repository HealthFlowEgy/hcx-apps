# ============================================================================
# .env.production - Production Environment
# ============================================================================

# BSP Backend API
BSP_API_URL=https://bsp.healthflow.eg/api/v1
BSP_API_KEY=prod_key_secure_your_production_key

# HCX Gateway
HCX_GATEWAY_URL=https://hcx.healthflow.eg
HCX_PARTICIPANT_CODE=BSP001

# Valify KYC Service
VALIFY_API_URL=https://api.valify.me/v1
VALIFY_API_KEY=your_valify_production_key
VALIFY_APP_ID=your_valify_production_app_id

# Firebase
FIREBASE_API_KEY=your_firebase_production_key
FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-prod
FIREBASE_STORAGE_BUCKET=your-app.appspot.com
FIREBASE_MESSAGING_SENDER_ID=111222333
FIREBASE_APP_ID=1:111222333:web:abcxyz

# App Configuration
APP_ENV=production
API_TIMEOUT=30000
ENABLE_LOGGING=false
ENABLE_MOCK_DATA=false

