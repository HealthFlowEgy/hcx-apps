FEATURE_REIMBURSEMENT_CLAIMS=true
FEATURE_BIOMETRIC_AUTH=true
FEATURE_OFFLINE_MODE=true
FEATURE_ANALYTICS=true

# ============================================================================
# .env.local - Local Mock Backend (for development without backend)
# ============================================================================

# Local Mock Server
BSP_API_URL=http://localhost:3000/api/v1
BSP_API_KEY=local_mock_key

# Mock Gateway
HCX_GATEWAY_URL=http://localhost:3001
HCX_PARTICIPANT_CODE=MOCK001

# Valify (can use real or mock)
VALIFY_API_URL=https://api.valify.me/v1
VALIFY_API_KEY=mock_valify_key
VALIFY_APP_ID=mock_valify_app

# Firebase (optional for local)
FIREBASE_API_KEY=mock_firebase_key
FIREBASE_AUTH_DOMAIN=localhost
FIREBASE_PROJECT_ID=mock-project
FIREBASE_STORAGE_BUCKET=mock-bucket
FIREBASE_MESSAGING_SENDER_ID=000000000
FIREBASE_APP_ID=mock-app-id

# App Configuration
APP_ENV=local
API_TIMEOUT=30000
ENABLE_LOGGING=true
ENABLE_MOCK_DATA=true

# Feature Flags
FEATURE_REIMBURSEMENT_CLAIMS=true
FEATURE_BIOMETRIC_AUTH=false
FEATURE_OFFLINE_MODE=true
FEATURE_ANALYTICS=false